{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "dist/js",
    "lib": ["es7", "dom", "es2017.object"],
    "suppressImplicitAnyIndexErrors": true,
    "declaration": false,
    "baseUrl": "."
  },
  "path": {
    "_api/*": ["./src/apis/*"],
    "_views/*": ["./src/client/views"],
    "_components/*":["./src/client/components"],
    "_common/*": ["./src/common"]
  },
  "files": ["./main.d.ts"],
  "exclude": [
    "node_modules"
  ],
  "include": [ "src/**/*"]
}